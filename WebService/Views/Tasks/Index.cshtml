@*This is the html page for the web api representing all tasks in the 
system and all users assigned to them.*@
@model IEnumerable<WebService.Models.TaskDatabaseTable>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TaskID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BeginDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeadlineDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Requirement)
        </th>
        <th>
            <p>Staff assigned:</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TaskID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BeginDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeadlineDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Requirement)
        </td>
        <td>
            @if (item.Assignment.Count > 0)
            {
                foreach (var staff in item.Assignment)
                {
                    <table>
                        <tr>
                            <th>
                                <p>Användarid:</p>
                            </th>
                            <td>
                                @Html.DisplayFor(staffItem => staff.User.UserID)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                <p>Förnamn:</p>
                            </th>
                            <td>
                                @Html.DisplayFor(staffItem => staff.User.FirstName)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                <p>Efternamn:</p>
                            </th>
                            <td>
                                @Html.DisplayFor(staffItem => staff.User.LastName)
                            </td>
                        </tr>
                    </table>
                }
            }
            
        </td>
    </tr>
}

</table>
