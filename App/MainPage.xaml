<Page
    x:Class="App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <ListBox Name="userList" Margin="10,100,40,110" SelectionChanged="userList_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap">
                            <Run FontWeight="Bold">User ID: </Run> 
                            <Run Text="{Binding UserID}" />
                        </TextBlock>
                        <TextBlock>
                            <Run FontWeight="Bold">First Name: </Run>
                            <Run Text="{Binding  FirstName}" />
                        </TextBlock>
                        <TextBlock>
                            <Run FontWeight="Bold">Last Name: </Run>
                            <Run Text="{Binding LastName}" />
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="button" Content="Task&#xD;&#xA;Page" Height="74" Width="51" Margin="161,214,0,352" Click="button_Click"/>
    </Grid>
</Page>
